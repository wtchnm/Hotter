{
  "name": "hotter",
  "version": "1.0.5",
  "license": "MIT",
  "scripts": {
    "commit": "git cz",
    "start": "cross-env NODE_ENV=development webpack serve --config .webpack/webpack.development.js",
    "build": "cross-env NODE_ENV=production webpack --config .webpack/webpack.production.js",
    "analyze": "cross-env NODE_ENV=production webpack --env analyze --config .webpack/webpack.production.js",
    "profile": "cross-env NODE_ENV=production webpack --env profile --config .webpack/webpack.production.js --profile --json > stats.json",
    "serve": "serve -s dist"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-transform-runtime": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-react": "7.12.5",
    "@babel/preset-typescript": "7.12.1",
    "@pmmmwh/react-refresh-webpack-plugin": "0.4.3",
    "@types/copy-webpack-plugin": "6.2.0",
    "@types/mini-css-extract-plugin": "1.2.1",
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "@types/webpack-bundle-analyzer": "3.9.0",
    "@types/workbox-webpack-plugin": "5.1.5",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "autoprefixer": "10.0.2",
    "babel-loader": "8.2.1",
    "babel-plugin-module-resolver": "4.0.0",
    "clean-webpack-plugin": "3.0.0",
    "commitizen": "4.2.2",
    "copy-webpack-plugin": "6.3.0",
    "cross-env": "7.0.2",
    "css-loader": "5.0.1",
    "cssnano": "4.1.10",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.13.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-unicorn": "23.0.0",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "mini-css-extract-plugin": "1.3.1",
    "postcss": "8.1.7",
    "postcss-loader": "4.0.4",
    "prettier": "2.1.2",
    "react-refresh": "0.9.0",
    "serve": "11.3.2",
    "style-loader": "2.0.0",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "20.0.0",
    "typescript": "4.0.5",
    "webpack": "5.20.2",
    "webpack-bundle-analyzer": "4.1.0",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "3.11.0",
    "workbox-webpack-plugin": "5.1.4"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "7.12.5",
    "core-js": "3.7.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "tailwindcss": "1.9.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --ext .ts,.tsx --fix",
      "prettier --write"
    ],
    "*.{html,css}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": "Edge >= 15, Firefox >= 54, Chrome >= 51, Safari >= 10, Opera >= 38"
}
