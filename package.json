{
	"name": "hotter",
	"version": "1.0.2",
	"license": "MIT",
	"scripts": {
		"commit": "git add . && git cz",
		"start": "webpack-dev-server --config ./.config/webpack/webpack.dev.js",
		"build": "webpack --config ./.config/webpack/webpack.prod.js",
		"serve": "superstatic dist",
		"test": "jest -c ./test/jest.config.js"
	},
	"devDependencies": {
		"@babel/core": "7.7.7",
		"@babel/plugin-transform-react-constant-elements": "7.7.4",
		"@babel/plugin-transform-react-inline-elements": "7.7.4",
		"@babel/plugin-transform-runtime": "7.7.6",
		"@babel/preset-env": "7.7.7",
		"@babel/preset-react": "7.7.4",
		"@babel/preset-typescript": "7.7.7",
		"@testing-library/jest-dom": "4.2.4",
		"@testing-library/react": "9.4.0",
		"@types/jest": "24.0.25",
		"@types/react": "16.9.17",
		"@types/react-dom": "16.9.4",
		"@types/webpack": "4.41.0",
		"@typescript-eslint/eslint-plugin": "2.13.0",
		"@typescript-eslint/parser": "2.13.0",
		"babel-loader": "8.0.6",
		"clean-webpack-plugin": "3.0.0",
		"commitizen": "4.0.3",
		"css-loader": "3.4.0",
		"cssnano": "4.1.10",
		"cz-conventional-changelog": "3.0.2",
		"eslint": "6.8.0",
		"eslint-config-airbnb": "18.0.1",
		"eslint-config-prettier": "6.9.0",
		"eslint-plugin-import": "2.19.1",
		"eslint-plugin-jest": "23.1.1",
		"eslint-plugin-jsx-a11y": "6.2.3",
		"eslint-plugin-prettier": "3.1.2",
		"eslint-plugin-react": "7.17.0",
		"eslint-plugin-react-hooks": "2.3.0",
		"fibers": "4.0.2",
		"hard-source-webpack-plugin": "0.13.1",
		"html-webpack-plugin": "3.2.0",
		"husky": "3.1.0",
		"jest": "24.9.0",
		"lint-staged": "9.5.0",
		"mini-css-extract-plugin": "0.9.0",
		"postcss-loader": "3.0.0",
		"postcss-preset-env": "6.7.0",
		"prettier": "1.19.1",
		"sass": "1.24.0",
		"sass-loader": "8.0.0",
		"style-loader": "1.1.2",
		"stylelint": "12.0.1",
		"stylelint-8-point-grid": "0.2.3",
		"stylelint-config-prettier": "6.0.0",
		"stylelint-config-standard": "19.0.0",
		"stylelint-declaration-block-no-ignored-properties": "2.2.0",
		"stylelint-prettier": "1.1.1",
		"stylelint-scss": "3.13.0",
		"superstatic": "6.0.4",
		"terser-webpack-plugin": "2.2.1",
		"thread-loader": "2.1.3",
		"ts-jest": "24.2.0",
		"typescript": "3.7.2",
		"webpack": "4.41.5",
		"webpack-cli": "3.3.10",
		"webpack-dev-server": "3.9.0",
		"webpackbar": "4.0.0"
	},
	"dependencies": {
		"normalize.css": "8.0.1",
		"offline-plugin": "5.0.7",
		"react": "16.12.0",
		"react-dom": "npm:@hot-loader/react-dom",
		"react-hot-loader": "4.12.18"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix --config .config/.eslintrc --ignore-path .config/.eslintignore",
			"prettier --write",
			"git add"
		],
		"*.{html,scss}": [
			"stylelint --fix --config .stylelintrc",
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"renovate": {
		"extends": [
			"config:base"
		],
		"automerge": true,
		"major": {
			"automerge": false,
			"assignees": [
				"wtchnm"
			]
		}
	}
}
