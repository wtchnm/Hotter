{
  "name": "hotter",
  "version": "1.0.5",
  "license": "MIT",
  "scripts": {
    "commit": "git cz",
    "start": "webpack serve --node-env=development --config .webpack/webpack.development.ts",
    "build": "webpack --node-env=production --config .webpack/webpack.production.ts",
    "analyze": "webpack --node-env=production --env analyze --config .webpack/webpack.production.ts",
    "profile": "webpack --node-env=production --env profile --config .webpack/webpack.production.ts --profile --json > stats.json",
    "serve": "serve -s dist"
  },
  "devDependencies": {
    "@babel/core": "7.12.13",
    "@babel/plugin-proposal-class-properties": "7.12.13",
    "@babel/plugin-transform-runtime": "7.12.15",
